{% extends 'dashboard/layout.jinja' %}
{% set page_id='home_dash' %}

{% block page_header %}
<h1 class="text-secondary">
    {{ _('Accueil') }}
    {% if current_user.is_authenticated %} 
        {{ current_user.id }}
    {% endif %}
</h1>
<p class="pt-2 pb-1 pb-lg-3">{{ welcome }}</p>
{% endblock %}

{% block page_main %}
    <div class="container-fluid">
        <div class="row me-3 my-2">
            <!-- Reports -->
            <div class="col-lg-8 col-12">
                <div class="card">
                    <div class="filter">
                        <a class="icon" data-bs-toggle="dropdown" href="#">
                            <i class="bi bi-three-dots"></i>
                        </a>
                        <ul class="dropdown-menu dropdown-menu-end dropdown-menu-arrow">
                            <li class="dropdown-header text-start">
                                <h6>
                                Filter
                                </h6>
                            </li>
                            <li>
                                <a class="dropdown-item" href="#">
                                Today
                                </a>
                            </li>
                            <li>
                                <a class="dropdown-item" href="#">
                                This Month
                                </a>
                            </li>
                            <li>
                                <a class="dropdown-item" href="#">
                                This Year
                                </a>
                            </li>
                        </ul>
                    </div>
                    <div class="card-body pb-0">
                        <h5 class="card-title">{{ _('Rapport') }} <span> | Today</span></h5>
                        <div class="table-responsive">
                            <table class="table table-borderless table-sm">
                                <thead>
                                    <tr>
                                        <th scope="col">Domaines</th>
                                        <th scope="col">Descriptions</th>
                                        <th scope="col">Statistiques</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    {% for stat in generate_stats(current_user) %}
                                    <tr>
                                        <th scope="row"><a href="#" class="text-primary fw-normal">{{ stat.domain }}</a></th>
                                        <td><a class="text-secondary fw-normal" href="#">{{ stat.description }}</a></td>
                                        <td>{{ stat.value }}</td>
                                    </tr>
                                    {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div> <!-- End Reports -->
            
            <!-- Alerts -->
            <div class="col-lg-4 col-12">
                <div class="card">
                    <div class="filter">
                        <a class="icon" data-bs-toggle="dropdown" href="#">
                            <i class="bi bi-three-dots"></i>
                        </a>
                        <ul class="dropdown-menu dropdown-menu-end dropdown-menu-arrow">
                            <li class="dropdown-header text-start"><h6>Filter</h6></li>
                            <li><a class="dropdown-item" href="#">Today</a></li>
                            <li><a class="dropdown-item" href="#">This Month</a></li>
                            <li><a class="dropdown-item" href="#">This Year</a></li>
                        </ul>
                    </div>
                    <div class="card-body pb-0">
                        <h5 class="card-title">{{ _('Alertes') }} <span> | Today</span></h5>
                        <div class="news">
                        {% for alert in generate_alerts(current_user) %}
                            <div class="d-flex">
                                <i class="{{ alert.icon }} ms-2"></i>
                                <div class="post-item clearfix ms-3">
                                    <h4><a href="#">{{ alert.title }}</a></h4>
                                    <p>{{ alert.description }}</p>
                                </div>
                            </div>
                        {% endfor %}
                        </div>
                        <!-- End sidebar recent posts-->
                    </div>
                </div>
            </div> <!-- End Alerts -->
        </div>
    </div>
{% endblock %}
