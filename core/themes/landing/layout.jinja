    <link href="https://fonts.gstatic.com" rel="preconnect" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Roboto:ital,wght@0,100;0,300;0,400;0,500;0,700;0,900;1,100;1,300;1,400;1,500;1,700;1,900&family=Poppins:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&family=Raleway:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap" rel="stylesheet"> -->

    <!-- Vendor CSS Files -->
    <link href="{{ url_for('static', filename='landing/assets/css/fonts.css') }}" rel="stylesheet">
    <link href="{{ url_for('static', filename='landing/assets/vendor/bootstrap/css/bootstrap.min.css') }}" rel="stylesheet">
    <link href="{{ url_for('static', filename='landing/assets/vendor/bootstrap-icons/bootstrap-icons.css') }}" rel="stylesheet">
    <link href="{{ url_for('static', filename='landing/assets/vendor/fontawesome-free/css/all.min.css') }}" rel="stylesheet">
    <link href="{{ url_for('static', filename='landing/assets/vendor/aos/aos.css') }}" rel="stylesheet">
    <link href="{{ url_for('static', filename='landing/assets/vendor/glightbox/css/glightbox.min.css') }}" rel="stylesheet">
    <link href="{{ url_for('static', filename='landing/assets/vendor/swiper/swiper-bundle.min.css') }}" rel="stylesheet">
    {% block vendor_css %}{% endblock %}

    <!-- Template CSS File -->
    <link href="{{ url_for('static', filename='landing/assets/css/color.css') }}" rel="stylesheet">
    <link href="{{ url_for('static', filename='landing/assets/css/preloader.css') }}" rel="stylesheet">
    <link href="{{ url_for('static', filename='landing/assets/css/landing.css') }}" rel="stylesheet">
    {% block custom_css %}{% endblock %}

</head>

<!-- Layout variables -->
{% set page_id = page_id | default('') %}
{% set menu_name = 'navbar' %}
{% set hero_size = hero_size | default('xs') %}
{% set footer_size = footer_size | default('sm') %}

<!-- Jinja macros -->
{% import "landing/macros.jinja" as landing %}


<body>

    <!-- Preloader -->
    <div id="preloader"></div>
    <script src="{{ url_for('static', filename='landing/assets/js/preloader.js') }}"></script>
    <!-- End preloader -->

    <!-- Header  -->
    <header id="header" class="fixed-top">
      <div class="container-fluid d-flex align-items-center">

        <!-- Header logo -->
        {{ landing.brand() }}

        <!-- Header menu -->
        <nav class="nav-menu d-flex flex-grow-1 align-items-center">
            {{ landing.menu(menus[menu_name], current_user, active=page_id) }}
            <i class="mobile-nav-toggle d-xl-none bi bi-list ms-auto"></i>
        </nav><!-- End Header menu -->
    
      </div>
    </header><!-- End Header -->

    <div class="main-wrapper d-flex flex-column">
        <!-- Hero  -->
        <div id="hero" class="hero-{{ hero_size }} py-0 d-flex flex-column">
            {% block page_hero %}{% endblock %}
        </div>

        <!-- Main Sections -->
        <main id="main" class="d-flex flex-column flex-grow-1">
            {% block page_sections %}{% endblock%}
        </main>
        
        <!-- Footer  -->
        <footer id="footer" class="footer-{{ footer_size }} dark-background">

            <!-- Footer Contents -->        
            {% block page_footer %}

                {% if footer_size == 'md' %}
                    {{ landing.light_footer(get_contact()) }}
                {% elif footer_size == 'lg' %}
                    {{ landing.full_footer(get_contact(), get_links()) }}
                {% endif %}

                <!-- Footer Copyright -->
                <div class="container copyright text-center">
                    <p>Â© 
                        <span>Copyright</span> 
                        <strong class="px-1 sitename">CINFO ENSET</strong> 
                        <span>All Rights Reserved</span>
                    </p>
                    <div class="credits">
                        <span>Designed by </span>
                        {% block page_authors %}
                        <a>Malcom Chumchoua Penda</a>
                        {% endblock %}
                    </div>
                </div><!-- End Footer copyright -->
            {% endblock %}


        </footer><!-- ENd Footer -->
    </div>


    <!-- Scroll Top -->
    <a href="#" id="scroll-top" class="scroll-top d-flex align-items-center justify-content-center">
        <i class="bi bi-arrow-up-short"></i>
    </a>
    
    <!-- Vendor JS Files -->
    <script src="{{ url_for('static', filename='landing/assets/vendor/bootstrap/js/bootstrap.bundle.min.js') }}"></script>
    <script src="{{ url_for('static', filename='landing/assets/vendor/aos/aos.js') }}"></script>
    <script src="{{ url_for('static', filename='landing/assets/vendor/glightbox/js/glightbox.min.js') }}"></script>
    <script src="{{ url_for('static', filename='landing/assets/vendor/purecounter/purecounter_vanilla.js') }}"></script>
    <script src="{{ url_for('static', filename='landing/assets/vendor/imagesloaded/imagesloaded.pkgd.min.js') }}"></script>
    <script src="{{ url_for('static', filename='landing/assets/vendor/isotope-layout/isotope.pkgd.min.js') }}"></script>
    <script src="{{ url_for('static', filename='landing/assets/vendor/swiper/swiper-bundle.min.js') }}"></script>
    {% block vendor_js %}{% endblock %}
    
    <!-- Main JS File -->
    <script src="{{ url_for('static', filename='landing/assets/js/landing.js') }}"></script>
    <script src="{{ url_for('static', filename='landing/assets/js/coming-soon.js') }}"></script>
    {% block custom_js %}{% endblock %}

</body>
</html>