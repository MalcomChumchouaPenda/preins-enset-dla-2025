    <!-- Template CSS File -->
    <link href="{{ url_for('static', filename='landing/assets/css/color.css') }}" rel="stylesheet">
    <link href="{{ url_for('static', filename='landing/assets/css/error.css') }}" rel="stylesheet">
    <link href="{{ url_for('static', filename='landing/assets/css/preloader.css') }}" rel="stylesheet">

</head>
<body id="{{ number }}">

    <!-- Preloader -->
    <div id="preloader"></div>
    <script src="{{ url_for('static', filename='landing/assets/js/preloader.js') }}"></script>
    <!-- End preloader -->
    
    <div class="error-content-wrapper d-flex flex-row align-items-center pt-0 pb-5">
        <div class="container pt-0 pb-5">
            <div class="row justify-content-center pb-5">
                <div class="col-10 col-md-8 text-center">
                    <img src="{{ url_for('static', filename='landing/assets/img/logo.png') }}" alt="">
                    <span class="display-1 d-block error-number">{{ number }}</span>
                    <div class="mb-4 lead error-message">{{ message }}</div>                    
                    <div class="d-flex justify-content-center">
                        <div class="d-flex flex-column justify-content-start align-items-start">
                        {% for action in actions %}
                           <a href="{{ action.url }}" class="btn btn-link">
                                <i class="bi bi-arrow-left ms-0 me-1"></i>
                                {{ action.text }}
                            </a>
                        {% endfor %}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
    
    <!-- Vendor JS Files -->
    <script src="{{ url_for('static', filename='landing/assets/vendor/bootstrap/js/bootstrap.bundle.min.js') }}"></script>
    
</body>
