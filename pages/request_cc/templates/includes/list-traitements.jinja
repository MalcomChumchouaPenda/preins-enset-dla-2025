<h4 class="card-title mt-2">Traitements</h4>
<table class="table table-striped">
    <thead>
        <tr>
            <th>Date</th>
            <th>Traiter Par</th>
            <th>Obersvation</th>
            <th>Status</th>
        </tr>
    </thead>
    <tbody>
        {% for traitement in traitements %}
        <tr>
            <td>{{traitement.date_tr.strftime('%d/%m/%Y
                %H:%M')}}</td>

            <td>{{traitement.reponsable}}</td>
            <td>{{traitement.commentaire}}</td>
            <td>
                <span class="badge bg-{{traitement.status.color}}">{{traitement.status.nom}}</span>
            </td>
        </tr>
        {% endfor %}
    </tbody>
</table>